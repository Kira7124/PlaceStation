<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.project3.placestation.repository.interfaces.CsNoticeBoardRepository">
		
	<!-- 공지사항 리스트 출력 -->
	 <select id="CsNoticeBoardListAll" resultType="com.project3.placestation.cs.dto.CsNoticeDTO">
	 		select * from notice_board
			limit #{startPage},#{pageSize}
    </select>
    
	<!-- 페이징 처리 갯수 세팅 -->
	<select id="CsNoticeBoardCount" resultType="int">
			<![CDATA[ select count(*) from notice_board where n_bno > 0 ]]>
    </select> 
    
	<!-- 특정 글 조회(글 번호 사용) -->
	<select id="DetailNoticeBoard" resultType="com.project3.placestation.cs.dto.CsNoticeDTO">
			select * from notice_board where n_bno = #{nbno}
	</select>
	
	<!-- 글 조회수 1 증가 -->
	<!-- <update id="UpdateReadCnt">
			update notice_board set n_readcount = n_readcount + 1 where n_bno = #{nbno} 
	</update> -->
	
	<!-- 카테고리에 따른 공지사항 수 -->
	<select id="CsNoticeBoardCountByCategory" resultType="int">
			select count(*) from notice_board 
			where category_id = #{categoryid}
	</select>
	
	<!-- 카테고리에 따른 공지사항 리스트 출력 -->
	<select id="CsNoticeBoardListByCategory" resultType="com.project3.placestation.cs.dto.CsNoticeDTO">
			select * from notice_board
			where category_id = #{categoryid}
			limit #{cri.startPage},#{cri.pageSize}
	</select>

</mapper>