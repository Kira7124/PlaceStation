<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.project3.placestation.repository.interfaces.CsQnaBoardRepository">
	
	<!-- 공지사항 리스트 출력 -->
	<select id="CsQnaBoardListAll" resultType="com.project3.placestation.cs.dto.CsQnaDTO">
 			select * from qna_board
   	</select>
   
	<!-- 특정 글 조회(글 번호 사용) -->
	<select id="DetailQnaBoard" resultType="com.project3.placestation.cs.dto.CsQnaDTO">
			select * from qna_board where q_bno = #{qbno}
	</select>
	
	
</mapper>